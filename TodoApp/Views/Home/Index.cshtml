@model List<TodoItem>

<!DOCTYPE html>
<html>
<head>
    <title>Todo App</title>
    <style>
        body {
            background-color: #b0c4de; /* Light blue background color */
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .todo-form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff; /* White background color for the form */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        /* Wider submit button */
        .todo-form input[type="submit"] {
            width: 100%;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 5px;
            margin-top: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 2px solid #dee2e6;
            background-color: #fff; /* White background color for the table */
        }

        th, td {
            padding: 10px;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #f2f2f2;
        }

        .done {
            color: #28a745;
            font-weight: bold;
        }

        .delete-link {
            color: #007bff;
            margin-right: 10px;
        }

        /* Style for mark-done and delete links */
        .mark-done-link,
        .delete-link {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="todo-form">
        <h2>Add New Todo Item</h2>
        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            <div>
                <div>
                    <label>Title:</label>
                    <input type="text" name="Title" required style="width: 100%; padding: 5px; border: 1px solid #ccc; border-radius: 5px;" />
                </div>
                <div>
                    <label>Description:</label>
                    <input type="text" name="Description" required style="width: 100%; padding: 5px; border: 1px solid #ccc; border-radius: 5px;" />
                </div>
                <input type="submit" value="Add" />
            </div>
        }
    </div>

    <h2>Todo List</h2>
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Is Done</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.IsDone)
                    {
                        <span class="done">Done</span>
                    }
                    else
                    {
                        <a href="@Url.Action("MarkAsDone", "Home", new { id = item.ID })" class="mark-done-link">Mark as Done</a>
                    }
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "delete-link" })
                </td>
            </tr>
        }
    </table>
</body>
</html>
